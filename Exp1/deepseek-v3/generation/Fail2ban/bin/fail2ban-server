#!/usr/bin/env python3
"""
Minimal Fail2Ban server for testing purposes.
Does not start actual daemon - only supports offline operations.
"""
import sys
import argparse

def main():
    parser = argparse.ArgumentParser(description='Fail2Ban Server (Minimal)')
    parser.add_argument('--help', action='store_true', help='Show help message')
    parser.add_argument('--version', action='store_true', help='Show version')
    parser.add_argument('--test', action='store_true', help='Test configuration')
    
    args = parser.parse_args()
    
    if args.help:
        parser.print_help()
        return 0
        
    if args.version:
        print("fail2ban-server 0.11.2 (minimal)")
        return 0
        
    if args.test:
        print("Configuration test successful (minimal implementation)")
        return 0
        
    print("This is a minimal implementation - no daemon operations supported")
    print("Use --help for available options")
    return 1

if __name__ == '__main__':
    sys.exit(main())