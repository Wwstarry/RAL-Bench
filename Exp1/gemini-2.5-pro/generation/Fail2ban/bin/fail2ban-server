#!/usr/bin/env python3
import argparse
import sys

def main():
    """Mock fail2ban-server entry point."""
    parser = argparse.ArgumentParser(
        description="Fail2Ban server daemon.",
        epilog="This is a mock script. It does not start a real daemon."
    )
    parser.add_argument("-v", "--verbose", action="count", help="Increase verbosity")
    parser.add_argument("action", nargs='?', choices=['start', 'stop', 'restart', 'status'], help="Action to perform")
    
    if len(sys.argv) == 1 or not sys.argv[1] in ['start', 'stop', 'restart', 'status', '--help', '-h']:
        print("This is a mock fail2ban-server. It does not start a daemon.")
        parser.print_help(sys.stderr)
        sys.exit(1)
        
    args = parser.parse_args()
    if args.action:
        print(f"Simulating server action: {args.action}")
    else:
        # This branch is for --help
        parser.print_help(sys.stdout)
    sys.exit(0)

if __name__ == "__main__":
    main()