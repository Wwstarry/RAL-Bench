#!/usr/bin/env python3
import argparse
import sys

def main():
    """Mock fail2ban-client entry point."""
    parser = argparse.ArgumentParser(
        description="Fail2Ban client CLI.",
        epilog="This is a mock script. It does not connect to a server."
    )
    parser.add_argument("action", nargs='*', help="Action and options (e.g., 'status sshd')")
    
    if len(sys.argv) == 1:
        print("This is a mock fail2ban-client. It does not connect to a server.")
        parser.print_help(sys.stderr)
        sys.exit(1)
        
    args = parser.parse_args()
    print(f"Simulating client action: {' '.join(args.action)}")
    sys.exit(0)

if __name__ == "__main__":
    main()