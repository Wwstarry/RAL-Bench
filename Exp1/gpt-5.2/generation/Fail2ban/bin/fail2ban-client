#!/usr/bin/env python3
import argparse
import sys


def main(argv=None):
    parser = argparse.ArgumentParser(
        prog="fail2ban-client",
        description="Minimal offline fail2ban-client (no daemon control).",
    )
    parser.add_argument(
        "--version",
        action="store_true",
        help="Show version information and exit.",
    )
    parser.add_argument(
        "command",
        nargs="*",
        help="Unsupported in this minimal build (offline only).",
    )
    args = parser.parse_args(argv)

    if args.version:
        try:
            from fail2ban import __version__
        except Exception:
            __version__ = "unknown"
        print(f"fail2ban-client {__version__}")
        return 0

    if args.command:
        sys.stderr.write(
            "fail2ban-client: this minimal build does not support daemon commands.\n"
        )
        return 2
    parser.print_help()
    return 0


if __name__ == "__main__":
    raise SystemExit(main())