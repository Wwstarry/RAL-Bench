#!/usr/bin/env python3

"""
Minimal fail2ban-server script demonstration.
This script only supports --help for safe offline usage.
No real server processes or firewall modifications.
"""

import sys

def show_help():
    print("Usage: fail2ban-server [OPTIONS]\n")
    print("Options:")
    print("  --help   Show this help message and exit")
    print("\nNote: This minimal script does NOT start a daemon or modify firewall rules.")

def main():
    if "--help" in sys.argv or len(sys.argv) == 1:
        show_help()
    else:
        print("This minimal fail2ban-server does not implement real server operations.")

if __name__ == "__main__":
    main()