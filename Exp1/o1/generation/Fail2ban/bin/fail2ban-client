#!/usr/bin/env python3

"""
Minimal fail2ban-client script demonstration.
This script only supports --help for safe offline usage.
"""

import sys

def show_help():
    print("Usage: fail2ban-client [OPTIONS]\n")
    print("Options:")
    print("  --help   Show this help message and exit")

def main():
    if "--help" in sys.argv or len(sys.argv) == 1:
        show_help()
    else:
        print("This minimal fail2ban-client does not implement real commands.")

if __name__ == "__main__":
    main()