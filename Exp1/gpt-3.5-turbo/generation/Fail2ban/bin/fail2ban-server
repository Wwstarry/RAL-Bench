#!/usr/bin/env python3
import sys

def print_help():
    print("""fail2ban-server - minimal stub

Usage:
  fail2ban-server --help

This is a minimal stub for fail2ban-server.
No real daemon or firewall operations are performed.
""")

def main():
    if '--help' in sys.argv or len(sys.argv) == 1:
        print_help()
        sys.exit(0)
    else:
        print("fail2ban-server: unknown command or arguments")
        sys.exit(1)

if __name__ == '__main__':
    main()