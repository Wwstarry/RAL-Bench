#!/usr/bin/env python3
import sys
import argparse

def main():
    parser = argparse.ArgumentParser(
        description="Fail2Ban client utility.",
        epilog="This is a minimal, safe-to-evaluate subset of fail2ban-client. "
               "It does not connect to a real server."
    )
    parser.add_argument("command", nargs='?', help="Command to execute (e.g., 'status', 'reload').")
    parser.add_argument("jail", nargs='?', help="Jail name for the command.")

    args = parser.parse_args()

    print("--- fail2ban-client (simulation) ---")
    if args.command:
        print(f"Simulating command '{args.command}' for jail '{args.jail or 'all'}'...")
    else:
        parser.print_help()

    return 0

if __name__ == "__main__":
    sys.exit(main())