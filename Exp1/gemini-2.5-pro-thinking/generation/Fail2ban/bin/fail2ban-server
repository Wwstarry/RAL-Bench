#!/usr/bin/env python3
import sys
import argparse

def main():
    parser = argparse.ArgumentParser(
        description="Fail2Ban server daemon.",
        epilog="This is a minimal, safe-to-evaluate subset of fail2ban-server. "
               "It does not start a real daemon or modify system settings."
    )
    parser.add_argument("-v", "--verbose", action="store_true", help="Increase verbosity.")
    parser.add_argument("start", nargs='?', help="Start the server (simulated).")
    
    args = parser.parse_args()

    print("--- fail2ban-server (simulation) ---")
    if args.start:
        print("Simulating server start...")
    else:
        parser.print_help()
    
    return 0

if __name__ == "__main__":
    sys.exit(main())