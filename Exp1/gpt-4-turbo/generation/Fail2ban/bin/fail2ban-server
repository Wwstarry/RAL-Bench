#!/usr/bin/env python3
import sys

def print_help():
    print("fail2ban-server (safe subset)")
    print("Usage: fail2ban-server [OPTIONS]")
    print("Options:")
    print("  --help        Show this help message and exit")
    print("  (No daemon operations performed in safe subset)")

def main():
    if '--help' in sys.argv or len(sys.argv) == 1:
        print_help()
        sys.exit(0)
    else:
        print("No server operations available in safe subset. Use --help for usage.")
        sys.exit(1)

if __name__ == '__main__':
    main()