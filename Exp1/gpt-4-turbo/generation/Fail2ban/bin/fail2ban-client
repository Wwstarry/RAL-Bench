#!/usr/bin/env python3
import sys

def print_help():
    print("fail2ban-client (safe subset)")
    print("Usage: fail2ban-client [OPTIONS]")
    print("Options:")
    print("  --help        Show this help message and exit")
    print("  status        Show status (simulated)")

def main():
    if '--help' in sys.argv or len(sys.argv) == 1:
        print_help()
        sys.exit(0)
    elif 'status' in sys.argv:
        print("Status: (safe subset) No jails running, no bans applied.")
        sys.exit(0)
    else:
        print("Unknown command. Use --help for usage.")
        sys.exit(1)

if __name__ == '__main__':
    main()